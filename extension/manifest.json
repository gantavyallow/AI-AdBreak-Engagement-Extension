{
    "manifest_version": 3,
    "name": "OverBrief",
    "version": "1.0",
    "description": "Shows AI-generated cricket over summaries during ad breaks",
    "permissions": [],
    "host_permissions": [
        "http://localhost:5000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}